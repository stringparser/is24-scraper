{
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  }
}
